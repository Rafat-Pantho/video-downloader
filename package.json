{
  "name": "video-downloader",
  "version": "3.3.0",
  "description": "Modern video downloader with GUI using yt-dlp",
  "main": "main.js",
  "scripts": {
    "postinstall": "node postinstall.js",
    "webpack": "webpack --mode development",
    "webpack:watch": "webpack --mode development --watch",
    "start": "npm run webpack && electron . --disable-gpu-shader-disk-cache",
    "dev": "npm run webpack && electron . --dev",
    "cli": "node index.js",
    "build": "npm run webpack && electron-builder --win",
    "build:dir": "npm run webpack && electron-builder --win --dir"
  },
  "build": {
    "appId": "com.videodownloader.app",
    "productName": "Video Downloader",
    "icon": "assets/Gemini_Generated_Image_jjisp6jjisp6jjis.png",
    "artifactName": "video-downloader-${os}-${arch}.${ext}",
    "files": [
      "**/*",
      "bin/**/*"
    ],
    "asarUnpack": [
      "bin/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/Gemini_Generated_Image_jjisp6jjisp6jjis.png"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [
    "youtube",
    "video",
    "downloader",
    "yt-dlp",
    "electron",
    "gui"
  ],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/Rafat-Pantho/video-downloader.git"
  },
  "bugs": {
    "url": "https://github.com/Rafat-Pantho/video-downloader/issues"
  },
  "homepage": "https://github.com/Rafat-Pantho/video-downloader#readme",
  "dependencies": {
    "chalk": "^5.3.0",
    "inquirer": "^9.2.12",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "style-loader": "^4.0.0",
    "unzipper": "^0.12.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  }
}
